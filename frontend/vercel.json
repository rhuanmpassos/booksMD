{
  "buildCommand": "npm install && npm run build -- --configuration production",
  "outputDirectory": "dist/booksmd/browser",
  "functions": {
    "api/upload.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/upload",
      "destination": "/api/upload"
    },
    {
      "source": "/api/extract",
      "destination": "/api/extract"
    },
    {
      "source": "/api/analyze",
      "destination": "/api/analyze"
    },
    {
      "source": "/api/generate",
      "destination": "/api/generate"
    },
    {
      "source": "/api/status/:jobId",
      "destination": "/api/status/:jobId"
    },
    {
      "source": "/api/download/:jobId/:type",
      "destination": "/api/download/:jobId/:type"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

