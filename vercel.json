{
  "buildCommand": "npm install && npm run build -- --configuration production",
  "outputDirectory": "dist/booksmd/browser",
  "functions": {
    "api/upload.ts": {
      "maxDuration": 60
    },
    "api/proxy.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/upload",
      "dest": "/api/upload.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/proxy.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

